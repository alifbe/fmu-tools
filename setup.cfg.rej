+# W503: https://gitlab.com/pycqa/flake8/-/issues/139
 exclude = docs,
     tests/data
 max-line-length = 88
@@ -11,4 +14,5 @@ test = pytest
 
 [tool:pytest]
 addopts = --verbose -x
-
+markers =
+    integration: marks a test as an integration test
